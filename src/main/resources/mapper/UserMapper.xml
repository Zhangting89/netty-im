<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanfangyi.nettyim.mapper.UserMapper">
    <sql id="columns">
      id,name,password,status,headImg,userType,ctime,utime
    </sql>

    <select id="findById" resultType="com.lanfangyi.nettyim.bean.User">
        select <include refid="columns"/>
        from users
        where id=#{id}
    </select>

    <insert id="insert" parameterType="com.lanfangyi.nettyim.bean.User">
        insert into users(<include refid="columns"/>)
        values(#{id}, #{name}, #{password}, #{status},#{headImg},#{userType},#{cTime},#{uTime})
    </insert>

    <delete id="deleteById">
    	delete from users
    	where id in
    	<foreach collection="array" item="id" index="index" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="getUserIdByUsername" parameterType="String" resultType="Long">
        select id from users where name = #{username}
    </select>

    <select id="getUserByUsername" parameterType="String" resultType="com.lanfangyi.nettyim.bean.User">
        select <include refid="columns"/> from users where name = #{username}
    </select>

    <select id="getUserById">
        select <include refid="columns"/> from users where id = #{id}
    </select>

    <select id="listUser" parameterType="java.util.List" resultType="com.lanfangyi.nettyim.bean.User">
        select <include refid="columns"/> from users where id in
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>